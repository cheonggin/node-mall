{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "removeComments": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true /* 支持以import xx from ‘xx’格式引入 */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
